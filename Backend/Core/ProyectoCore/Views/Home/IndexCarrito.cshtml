@model List<ProyectoCore.Models.Carrito>
@{

    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Carrito</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista de Carritos</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Carrito_Detalle" asp-controller="Home" asp-route-idCarrito="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>dueno del carrito</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.oUsuario?.NombreUsuario</td>
                        <td>
                            <a class="btn btn-primary btn-sm " asp-action="Carrito_Detalle" asp-controller="Home" asp-route-idCarrito="@item.IdCarrito"> Editar</a>
                            <a class="btn btn-danger btn-sm " asp-action="Eliminar_Carrito" asp-controller="Home" asp-route-idCarrito="@item.IdCarrito"> Eliminar</a>
                        </td>
                    </tr>



                }
            </tbody>
        </table>


    </div>
</div>


