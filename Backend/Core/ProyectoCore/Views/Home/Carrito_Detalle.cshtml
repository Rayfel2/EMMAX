@model ProyectoCore.Models.ViewModels.CarritoVM
@{
    ViewData["Title"] = "Carrito_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCarrito.IdCarrito == 0)
{

    <h1>Crear Carrito</h1>
}
else
{
    <h1>Editar Carrito</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Carrito_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oCarrito.IdCarrito" />

            <div class="mb-3">
                <label class="form-label" asp-for="oCarrito.IdUsuario">Nombre Usuario</label>
                <select class="form-select form-select-sm" asp-for="oCarrito.IdUsuario" asp-items="@Model.oListaUsuario">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">

                @if (Model.oCarrito.IdCarrito == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="IndexCarrito" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>


