@model ProyectoCore.Models.Role
@{
    ViewData["Title"] = "Eliminar_Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> ¿Esta seguro de eliminar el Rol?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar_Role" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdRoles" />

            <div class="mb-2">
                <label class="form-label" asp-for="Rol">Rol</label>
                <input class="form-control form-control-sm" asp-for="Rol" type="text" disabled />
            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar_Role</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexRole" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

