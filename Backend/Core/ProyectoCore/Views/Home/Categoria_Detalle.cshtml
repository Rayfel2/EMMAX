@model ProyectoCore.Models.ViewModels.CategoriaVM
@{
    ViewData["Title"] = "Categoria_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCategoria.IdCategoria == 0)
{

    <h1>Crear Categoria</h1>
}
else
{
    <h1>Editar Categoria</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="Categoria_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oCategoria.IdCategoria" />

            <div class="mb-2">
                <label class="form-label" asp-for="oCategoria.Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oCategoria.Nombre" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCategoria.Descripcion">Descripcion</label>
                <input class="form-control form-control-sm" asp-for="oCategoria.Descripcion" type="text" />
            </div>

            <div class="mb-2">

                @if (Model.oCategoria.IdCategoria == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="IndexCategoria" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>