@model ProyectoCore.Models.RolesUsuario
@{
    ViewData["Title"] = "Eliminar_RolesUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> ¿Esta seguro de eliminar el RolesUsuario?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar_RolesUsuario" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdRoles" />
            <input type="hidden" asp-for="IdUsuario" />

            <div class="mb-3">
                <label class="form-label" asp-for="IdRoles">IDRoles</label>
                <input class="form-control form-control-sm" asp-for="oRole.IdRoles" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdUsuario">Usuario</label>
                <input class="form-control form-control-sm" asp-for="oUsuario.IdUsuario" type="text" disabled />
            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexRolesUsuario" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>


