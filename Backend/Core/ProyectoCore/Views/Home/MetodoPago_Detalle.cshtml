@model ProyectoCore.Models.ViewModels.MetodoPagoVM
@{
    ViewData["Title"] = "MetodoPago_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oMetodoPago.IdMetodo == 0)
{

    <h1>Crear Metodo de pago</h1>
}
else
{
    <h1>Editar Metodo de pago</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="MetodoPago_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oMetodoPago.IdMetodo" />

            <div class="mb-2">
                <label class="form-label" asp-for="oMetodoPago.TipoMetodo">Tipo de metodo</label>
                <input class="form-control form-control-sm" asp-for="oMetodoPago.TipoMetodo" type="text" />
            </div>

            <div class="mb-2">

                @if (Model.oMetodoPago.IdMetodo == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="IndexMetodoPago" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

