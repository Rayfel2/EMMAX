@model List<ProyectoCore.Models.Categorium>
@{

    ViewData["Title"] = "Categoria";
}

<div class="text-center">
    <h1 class="display-4">Categoria</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista de categorias</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Categoria_Detalle" asp-controller="Home" asp-route-idCategoria="0">Crear Nuevo</a>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>
                            <a class="btn btn-primary btn-sm " asp-action="Categoria_Detalle" asp-controller="Home" asp-route-idCategoria="@item.IdCategoria"> Editar</a>
                            <a class="btn btn-danger btn-sm " asp-action="Eliminar_Categoria" asp-controller="Home" asp-route-idCategoria="@item.IdCategoria"> Eliminar</a>
                        </td>
                    </tr>



                }
            </tbody>
        </table>


    </div>
</div>