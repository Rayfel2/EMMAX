@model ProyectoCore.Models.Categorium
@{
    ViewData["Title"] = "Eliminar_Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> ¿Esta seguro de eliminar la categoria?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar_Categoria" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdCategoria" />

            <div class="mb-2">
                <label class="form-label" asp-for="Nombre">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Nombre" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="Descripcion">Descripcion</label>
                <input class="form-control form-control-sm" asp-for="Descripcion" type="text" disabled />
            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar_Categoria</button>
                <a class="btn btn-dark btn-sm" asp-action="IndexCategoria" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>


